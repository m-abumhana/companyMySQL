<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Company</th>
        <th scope="col">User Type</th>
        <th colspan="3" class="text-center">Action</th>
        <th scope="col">Projects</th>
      </tr>
    </thead>
    <tbody>
          <% @users.each do |user| %>
      <tr>

        <th scope="row">  <%= user.id %></th>
        <th scope="row">  <%= user.first_name %></th>
        <th scope="row">  <%= user.last_name %></th>
        <th scope="row">  <%= user.phone_number %></th>
        <th scope="row">  <%= user.company_id %></th>
        <th scope="row">  <%= user.user_type %></th>
        <th scope="row">  <%= link_to 'Show', user %></th>
        <th scope="row">  <%= link_to 'Edit', edit_user_path(user) %></th>
        <th scope="row">  <%= link_to 'Delete',
          user_path(user), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %>
        </th>
        <th scope="row">
          <%= link_to 'Get Project', projects_users_user_path(user) %>
        </th>
      </tr>
        <% end %>
      </tbody>
  </table>
    <%= link_to "New User", new_user_path %>
</div>
