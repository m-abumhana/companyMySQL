<p style="color: green"><%= notice %></p>

<h1>Projects</h1>

<div>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Project Domain</th>
        <th scope="col">Description</th>
        <th scope="col">Budget</th>
        <th scope="col">Estimation</th>
        <th scope="col">User</th>
        <th colspan="3" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
          <% @projects.each do |project| %>
      <tr>

        <th scope="row">  <%= project.id %></th>
        <th scope="row">  <%= project.project_domain %></th>
        <th scope="row">  <%= project.description %></th>
        <th scope="row">  <%= project.budget %></th>
        <th scope="row">  <%= project.estimation %></th>
        <th scope="row">  <%= project.user_id %></th>
        <th scope="row">  <%= link_to 'Show', project %></th>
        <th scope="row">  <%= link_to 'Edit', edit_project_path(project) %></th>
        <th scope="row">  <%= link_to 'Delete',
          project_path(project), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %>
        </th>
      </tr>
        <% end %>
      </tbody>
  </table>
    <%= link_to "New project", new_project_path %>
</div>

